<mujoco model="foucault_pendulum">
  
  <visual>
    <headlight ambient="0.6 0.6 0.6" diffuse="0.8 0.8 0.8" specular="0.3 0.3 0.3"/>
  </visual>
  
  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4" 
             width="300" height="300" mark="cross" markrgb="1 1 1"/>
    <material name="grid" texture="grid" texrepeat="8 8" reflectance="0.2"/>
  </asset>
  
  <worldbody>
    <!-- Ground plane with grid -->
    <geom name="ground" type="plane" size="10 10 0.1" material="grid" pos="0 0 -0.1"/>
    
    <body name="reference_frame1" pos="3 0 0.5">
      <geom name="x_axis1" type="capsule" fromto="0 0 0 1 0 0" size="0.01" rgba="1 0 0 0.7"/>
      <geom name="y_axis1" type="capsule" fromto="0 0 0 0 1 0" size="0.01" rgba="0 1 0 0.7"/>
      <geom name="z_axis1" type="capsule" fromto="0 0 0 0 0 1" size="0.01" rgba="0 0 1 0.7"/>
    </body>
    
    <!-- Reference frame markers to show Earth's rotation effect -->
    <body name="reference_frame2" pos="3 2 0.5">
      <geom name="x_axis2" type="capsule" fromto="0 0 0 1 0 0" size="0.01" rgba="1 0 0 0.2"/>
      <geom name="y_axis2" type="capsule" fromto="0 0 0 0 1 0" size="0.01" rgba="0 1 0 0.2"/>
      <geom name="z_axis2" type="capsule" fromto="0 0 0 0 0 1" size="0.01" rgba="0 0 1 0.2"/>
    </body>


      <body name="reference_frame3" pos="1 2 0.5" euler="45 45 0">
      <geom name="x_axis3" type="capsule" fromto="0 0 0 1 0 0" size="0.01" rgba="1 0 0 0.2"/>
      <geom name="y_axis3" type="capsule" fromto="0 0 0 0 1 0" size="0.01" rgba="0 1 0 0.2"/>
      <geom name="z_axis3" type="capsule" fromto="0 0 0 0 0 1" size="0.01" rgba="0 0 1 0.2"/>
       </body>
       <body name="reference_frame4" pos="1 3.5 0.5" euler="0 0 0">
      <geom name="x_axis4" type="capsule" fromto="0 0 0 1 0 0" size="0.01" rgba="1 0 0 0.2"/>
      <geom name="y_axis4" type="capsule" fromto="0 0 0 0 1 0" size="0.01" rgba="0 1 0 0.2"/>
      <geom name="z_axis4" type="capsule" fromto="0 0 0 0 0 1" size="0.01" rgba="0 0 1 0.2"/>
   
    </body>

  </worldbody>
  
  
</mujoco>